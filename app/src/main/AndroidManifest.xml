<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fikir">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="Fikir Sözlük"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity  android:windowSoftInputMode="adjustResize|stateHidden"
                android:name=".UI.Activities.ReadPost">
        </activity>
        <activity android:name=".UI.Activities.Register">
        </activity>
        <activity android:name=".UI.Activities.Login">
        </activity>
        <activity android:name=".UI.Activities.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>