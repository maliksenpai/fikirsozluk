                android:layout_alignParentTop="true" android:layout_marginTop="22dp" android:layout_marginLeft="27dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="64dp" android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" android:id="@+id/profilpostsay覺s覺text" android:layout_marginTop="67dp"
                android:layout_marginLeft="64dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profilpostsay覺s覺"/>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginTop="450dp"
            android:background="#fff"
            android:id="@+id/mainmenubnavigation"
            app:menu="@menu/mainmenu"/>
</FrameLayout>